{
  "id": "Game Boy Essentials",
  "viewports": [
    {
      "label": "small",
      "width": 320,
      "height": 480
    },
    {
      "label": "large",
      "width": 1024,
      "height": 768
    }
  ],
  "scenarios": [
    {
      "label": "Home",
      "delay": 200,
      "url": "http://localhost:4000/index.html",
      "selectors": [
        "header",
        "label",
        ".game",
        "footer"
      ],
      "selectorExpansion": false
    },
    {
      "label": "Article",
      "delay": 200,
      "url": "http://localhost:4000/0test/",
      "selectors": [
        "figure"
      ],
      "selectorExpansion": true,
      "requireSameDimensions": true
    },
    {
      "label": "Article",
      "delay": 200,
      "url": "http://localhost:4000/0test/",
      "selectors": [
        "document",
        "h1",
        "h2",
        "h3",
        "ul",
        "blockquote",
        "table",
        "ol",
        "code",
        "object",
        "audio",
        "video"
      ],
      "selectorExpansion": false,
      "requireSameDimensions": true
    },
    {
      "label": "Book",
      "delay": 200,
      "url": "http://localhost:4000/book/index.html",
      "selectors": [
        ".book"
      ],
      "selectorExpansion": true,
      "requireSameDimensions": true
    },
    {
      "label": "Timeline",
      "delay": 2500,
      "url": "http://localhost:4000/timeline/index.html",
      "selectors": [
        "label",
        ".year",
        ".month"
      ],
      "selectorExpansion": false,
      "requireSameDimensions": true
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  }
}